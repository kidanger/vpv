if os.getenv('WATCH') then WATCH = tonumber(os.getenv('WATCH')) end
if os.getenv('CACHE') then CACHE = tonumber(os.getenv('CACHE')) end
if WATCH == 0 then WATCH = false end
if CACHE == 0 then CACHE = false end

